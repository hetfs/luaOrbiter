# https://EditorConfig.org
# Top-most EditorConfig file
root = true

########################################################
# ğŸŒ Default Rules for All Files
########################################################
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

########################################################
# ğŸ“„ Markdown â€” Allow trailing spaces and long lines
########################################################
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

########################################################
# âš™ï¸ JSON, YAML, TOML, INI â€” Config Files
########################################################
[*.{json,jsonc}]  # Includes JSON with Comments
indent_size = 2
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2
ij_yaml_spaces_within_brackets = false  # JetBrains IDEs only

[*.toml]
indent_size = 2
max_line_length = 120

[*.ini]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

########################################################
# ğŸ—ï¸ CMake Build Files
########################################################
[CMakeLists.txt, *.cmake]
indent_size = 2

########################################################
# ğŸ–¥ C/C++ Files â€” System Programming
########################################################
[*.{c,cpp,h,hpp,cc,hh,inc}]
indent_size = 4
max_line_length = 120
ij_cpp_align_parameters_in_declarations = false

########################################################
# ğŸ¦€ Rust â€” Official Style Guide
########################################################
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100  # rustfmt default
trim_trailing_whitespace = true
insert_final_newline = true

########################################################
# ğŸ¹ Go (Golang) â€” Official Conventions
########################################################
[*.go]
indent_style = tab          # Go requires tabs, not spaces
tab_width = 8               # Official specification
max_line_length = 100       # Common practice (gofmt uses 80 but allows longer)
trim_trailing_whitespace = true
insert_final_newline = true

########################################################
# ğŸ Python â€” PEP-8 Compliance
########################################################
[*.py]
indent_size = 4
max_line_length = 120

########################################################
# â˜• Java â€” Industry Standards
########################################################
[*.java]
indent_size = 4
ij_java_blank_lines_after_imports = 1

########################################################
# ğŸ”· C# â€” Microsoft Conventions
########################################################
[*.cs]
indent_size = 4
dotnet_sort_system_directives_first = true

########################################################
# ğŸŒ HTML/CSS â€” Web Development
########################################################
[*.{html,htm,css,scss}]
indent_size = 2
max_line_length = 120

########################################################
# ğŸ“œ JavaScript/TypeScript â€” Common Conventions
########################################################
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

########################################################
# ğŸ’¡ Lua Files
########################################################
[*.lua]
indent_size = 4

########################################################
# ğŸ›  PowerShell Files
########################################################
[*.{ps1,psd1,psm1}]
indent_size = 4

########################################################
# ğŸš Shell Scripts
########################################################
[*.sh]
indent_size = 4

########################################################
# ğŸ“ Git Commit Messages
########################################################
[COMMIT_EDITMSG]
max_line_length = 72

########################################################
# ğŸ§© Makefiles (require tabs)
########################################################
[Makefile]
indent_style = tab

########################################################
# ğŸ“ Specific File Overrides
########################################################
[gradle/verification-metadata.xml]
indent_size = 3
