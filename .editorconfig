# https://EditorConfig.org
# Top-most EditorConfig file
root = true

########################################################
# ğŸŒ Default Rules for All Files
########################################################
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

########################################################
# ğŸ“„ Markdown â€” Allow trailing spaces and long lines
########################################################
[*.md]
trim_trailing_whitespace = false
max_line_length = off  # 'unset' is deprecated in some editors

########################################################
# âš™ï¸ JSON, YAML, and Configs â€” Common Overrides
########################################################
[*.json]
indent_size = 2
max_line_length = 120

[*.yml]
indent_size = 2
ij_yaml_spaces_within_brackets = false

[*.yaml]
indent_size = 2

########################################################
# ğŸ’¡ Lua Files
########################################################
[*.lua]
indent_size = 4

########################################################
# ğŸ›  PowerShell Files
########################################################
[*.ps1]
indent_size = 4

[*.psm1]
indent_size = 4

########################################################
# ğŸš Shell Scripts
########################################################
[*.sh]
indent_size = 4

########################################################
# ğŸ“ Specific File Overrides
########################################################
[gradle/verification-metadata.xml]
indent_size = 3
